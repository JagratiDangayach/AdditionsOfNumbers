@model SumOfNumbers.Models.SumModel

<div class="row">
    <div> <h1 class="text-center"> Sum of Two Numbers </h1> </div>
    <div class="col-lg-6">

        <form asp-controller="Sum" asp-action="Index" method="post" class="form">

            <div class="form-group">
                Enter 1st Number: <input  asp-for="FirstNumber" class="form-control" />               
            </div>
            <div class="form-group">
                Enter 2nd Number: <input  asp-for="SecondNumber" class="form-control" />
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Add</button>
            </div> 
            <div class="form-group">
                <h3> Result : @Model.Result</h3>
            </div> 

        </form> 
    </div>
</div>


  